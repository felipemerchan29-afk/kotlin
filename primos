fun esPrimo(n: Int): Boolean {
    if (n < 2) return false
    for (i in 2..Math.sqrt(n.toDouble()).toInt()) {
        if (n % i == 0) return false
    }
    return true
}

fun main(args: Array<String>) {
    if (args.isEmpty()) {
        println("Debes ingresar un número como argumento.")
        return
    }
    val n = args[0].toInt()
    println("¿Es primo? ${esPrimo(n)}")
}
